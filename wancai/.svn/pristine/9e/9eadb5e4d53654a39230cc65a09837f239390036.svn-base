		}
	</script>
	<script type="text/javascript">
		function tofindpwd() {
		}
	</script>
	<script type="text/javascript">
		var isinerval, times;
		apiready = function() {
			api.parseTapmode();
			api.addEventListener({
				name : 'closeWin'
			}, function(ret, err) {
				if (ret) {
					api.closeWin();
				} else {
					alert(JSON.stringify(err));
				}
			});
			api.addEventListener({
				name : 'closefrm'
			}, function(ret, err) {
				if (ret) {
					api.closeFrame({
						name : 'login'
					});
				} else {
					alert(JSON.stringify(err));
				}
			});
		}
		function toregister() {
			api.openWin({
				name : 'register',
				url : './register.html',
				animation : {
					type : "fade",
					subType : "from_left",
					duration : 700
				}
			});
		}

		function tofindpwd() {
			api.openWin({
				name : 'findpwd',
				url : './findPass.html', //curl 向上翻一页     un_curl 向下翻一页      suck  收缩效果     cube 立方体翻滚效果
				animation : {// flip 翻转效果    reveal  将旧视图移开,显示下面的新视图     ripple 滴水效果
					type : "fade", //push 新视图将旧视图推开    movein 新视图移到旧视图上面      fade 交叉淡化过渡
					subType : "from_right",
					duration : 700
				}
			});
		}
	</script>
</html>